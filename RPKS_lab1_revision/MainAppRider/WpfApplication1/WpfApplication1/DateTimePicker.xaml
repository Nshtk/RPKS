<UserControl x:Class="WpfApplication1.DateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Text="{Binding Year}"></TextBlock>
            <ComboBox Name="Years"></ComboBox>
            <TextBlock Text="{Binding Month}"></TextBlock>
            <ComboBox Name="Months"></ComboBox>
            <TextBlock Text="{Binding Day}"></TextBlock>
            <ComboBox Name="Days"></ComboBox>
            <TextBlock Text="{Binding Hour}"></TextBlock>
            <ComboBox Name="Hours"></ComboBox>
            <TextBlock Text="{Binding Minute}"></TextBlock>
            <ComboBox Name="Minutes"></ComboBox>
            <TextBlock Text="{Binding Second}"></TextBlock>
            <ComboBox Name="Seconds"></ComboBox>
        </StackPanel>
    </Grid>
</UserControl>